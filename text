package ru.baza;

import java.util.LinkedHashMap;
import java.util.Map;

public class Questions {

    public static record Question(String text, String options) {}

    public static final Map<Integer, Question> QUESTIONS = new LinkedHashMap<>();

    static {
        QUESTIONS.put(1, new Question(
                "How complex should your website be?",
                """
                1 - Simple landing page
                2 - Medium company website
                3 - Complex multi-page web app
                """
        ));

        QUESTIONS.put(2, new Question(
                "What is your budget level?",
                """
                1 - Low (under $500)
                2 - Medium ($500–2000)
                3 - High (over $2000)
                """
        ));

        QUESTIONS.put(3, new Question(
                "How much development time do you have?",
                """
                1 - Short (1–2 weeks)
                2 - Average (1–2 months)
                3 - Long (3+ months)
                """
        ));

        QUESTIONS.put(4, new Question(
                "What level of performance do you expect?",
                """
                1 - Low (basic site)
                2 - Medium (normal load)
                3 - High (many users, real-time)
                """
        ));

        QUESTIONS.put(5, new Question(
                "What is your project scale?",
                """
                1 - Personal project
                2 - Small business website
                3 - Large company / enterprise
                """
        ));
    }
}
